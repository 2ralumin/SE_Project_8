<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:strokeColor="@color/purple_200"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/post"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:gravity="start|center_vertical"
                    android:text="내가 쓴 글"
                    app:icon="@drawable/ic_baseline_article_24"
                    app:iconPadding="16dp"
                    app:iconTint="@color/one" />

                <Button
                    android:id="@+id/post_like"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:gravity="start|center_vertical"
                    android:text="좋아요 누른 글"
                    app:icon="@drawable/ic_baseline_thumb_up_24"
                    app:iconPadding="16dp"
                    app:iconTint="@color/five" />

                <Button
                    android:id="@+id/post_dislike"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:gravity="start|center_vertical"
                    android:text="싫어요 누른 글"
                    app:icon="@drawable/ic_baseline_thumb_down_24"
                    app:iconPadding="16dp"
                    app:iconTint="@color/two" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:strokeColor="@color/purple_200"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/post_notice"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:gravity="start|center_vertical"
                    android:text="공지"
                    app:icon="@drawable/ic_baseline_star_24"
                    app:iconPadding="16dp"
                    app:iconTint="@color/one" />

                <Button
                    android:id="@+id/post_review"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:gravity="start|center_vertical"
                    android:text="후기"
                    app:icon="@drawable/ic_baseline_article_24"
                    app:iconPadding="16dp"
                    app:iconTint="@color/three" />

                <Button
                    android:id="@+id/post_qna"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:gravity="start|center_vertical"
                    android:text="Q&amp;A"
                    app:icon="@drawable/ic_baseline_article_24"
                    app:iconPadding="16dp"
                    app:iconTint="@color/six" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

</ScrollView>